<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventsActivity">

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/hint_title"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/editText_location"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/hint_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_title" />

    <EditText
        android:id="@+id/editText_startDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="date"
        android:hint="@string/hint_start_date"
        android:onClick="showDatePicker"
        android:focusable="false"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_location"
        app:layout_constraintEnd_toStartOf="@id/editText_startTime" />

    <EditText
        android:id="@+id/editText_startTime"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="time"
        android:hint="@string/hint_start_time"
        android:onClick="showTimePicker"
        android:focusable="false"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_location"
        app:layout_constraintStart_toEndOf="@id/editText_startDate" />

    <EditText
        android:id="@+id/editText_endDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="date"
        android:hint="@string/hint_end_date"
        android:onClick="showDatePicker"
        android:focusable="false"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/editText_startDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/editText_endTime" />

    <EditText
        android:id="@+id/editText_endTime"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="time"
        android:hint="@string/hint_end_time"
        android:onClick="showTimePicker"
        android:focusable="false"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/editText_startTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editText_endDate" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/hint_description"
        android:lines="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_endDate" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_submit"
        android:layout_marginTop="50dp"
        android:onClick="submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_description" />

</android.support.constraint.ConstraintLayout>