<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventsActivity">

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/hint_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_location"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/hint_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_title" />

    <EditText
        android:id="@+id/editText_startDate"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="date"
        android:text="@string/hint_start_date"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="191dp" />

    <EditText
        android:id="@+id/editText_startTime"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="time"
        android:text="@string/hint_start_time"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="189dp" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="@string/hint_description" />

    <EditText
        android:id="@+id/editText_endTime"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="time"
        android:text="@string/hint_end_time" />

    <EditText
        android:id="@+id/editText_endDate"
        android:layout_width="142dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="date"
        android:text="@string/hint_end_date"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="237dp" />


</android.support.constraint.ConstraintLayout>